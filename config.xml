<?xml version='1.0' encoding='utf-8'?>
<widget id="net.flyduino.kissfc.mobilegui" version="1.14" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>KISS GUI</name>
    <description>
        KISS Mobile GUI
    </description>
    <author email="fedor@anuta.org" href="http://www.flyduino.net">
        Alexander Fedorov
    </author>
    <content src="main.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <access origin="http://ultraesc.de/" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="res/android/icons/kiss_gui_icon_192pxldpi.png" density="ldpi" />
        <icon src="res/android/icons/kiss_gui_icon_192pxmdpi.png" density="mdpi" />
        <icon src="res/android/icons/kiss_gui_icon_192pxxhdpi.png" density="xhdpi" />
        <icon src="res/android/icons/kiss_gui_icon_192pxxxhdpi.png" density="xxhdpi" />
        <icon src="res/android/icons/kiss_gui_icon_192pxxxxhdpi.png" density="xxxhdpi" />
    
    	<splash density="land-hdpi" src="res/android/screen/res-long-land-hdpi/default.png" />
        <splash density="land-ldpi" src="res/android/screen/res-long-land-ldpi/default.png" />
        <splash density="land-mdpi" src="res/android/screen/res-long-land-mdpi/default.png" />
        <splash density="land-xhdpi" src="res/android/screen/res-long-land-xhdpi/default.png" />
        <splash density="land-xxhdpi" src="res/android/screen/res-long-land-xxhdpi/default.png" />
        <splash density="land-xxxhdpi" src="res/android/screen/res-long-land-xxxhdpi/default.png" />
        <splash density="port-hdpi" src="res/android/screen/res-long-port-hdpi/default.png" />
        <splash density="port-ldpi" src="res/android/screen/res-long-port-ldpi/default.png" />
        <splash density="port-mdpi" src="res/android/screen/res-long-port-mdpi/default.png" />
        <splash density="port-xhdpi" src="res/android/screen/res-long-port-xhdpi/default.png" />
        <splash density="port-xxhdpi" src="res/android/screen/res-long-port-xxhdpi/default.png" />
        <splash density="port-xxxhdpi" src="res/android/screen/res-long-port-xxxhdpi/default.png" />
        
        <preference name="StatusBarOverlaysWebView" value="false" />
        <preference name="StatusBarBackgroundColor" value="#666666" />
        <preference name="StatusBarStyle" value="lightcontent" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
